\def \ifKeySet#1{\ifcsdef{\@trkv@prefix#1}}
\def \rawgetByKey#1#2{%
\csexpandonce{#1\detokenize{#2}}
}

\def \getByKey#1{%
  \ifcsdef{\@trkv@prefix\detokenize{#1}}%
    {\rawgetByKey{\@trkv@prefix}{#1}}%
    {\PackageError{trkv}{Pair with key `#1' not stored, sorry}%
      {How about \string\storePair ?}}%
}

\def \getPairByKey#1{#1\@trkv@pair@sep\getByKey{#1}}

