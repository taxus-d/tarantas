\def \trsym@boxes@center#1#2{%
  \begingroup%
  \ifmmode%
    \setbox0=\hbox{$#1$}%
    \setbox1=\hbox{$#2$}%
  \else
    \setbox0=\hbox{#1}%
    \setbox1=\hbox{#2}%
  \fi
  \dimen0=-0.5\wd1 \advance\dimen0 by -0.5\wd0%
  \def\expr{\vcenter{\copy1} \kern\dimen0\vcenter{\copy0}}%
  \ensuremath \expr%
  \endgroup%
}


