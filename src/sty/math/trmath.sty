\newcommand*{\ov}[2]{%
  \providecommand\EqCase[3]{\ifstrequal{#1}{##1}{##2}{##3}}%
  \EqCase{~}{\widetilde{#2}}       {%
  \EqCase{-}{\overline{#2}}        {%
  \EqCase{^}{\widehat{#2}}         {%
  \EqCase{0}{\overset\circ{#2}}    {%
  \EqCase{v}{\check{#2}}           {%
  \EqCase{->}{\overrightarrow{#2}} {%
  \EqCase{<-}{\overleftarrow{#2}}  {%
  \PackageError{trmath}{Undefined option to ov: `#1'}%
}}}}}}}
}


\newcommand*{\und}[2]{%
  \providecommand\EqCase[3]{\ifstrequal{#1}{##1}{##2}{##3}}%
  \EqCase{-}{\underline{#2}}     {% 
{\PackageError{trmath}{Undefined option to ov: `#1'}} }%
}%

